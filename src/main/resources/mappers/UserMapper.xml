<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.group.miShop.mapper.UserMapper">
  <resultMap id="byUserName" type="com.group.miShop.domain.entity.User">
      <id property="uid" column="uid"></id>
      <result property="password" column="password"></result>
      <result property="userName" column="username"></result>
  </resultMap>

  <select id="findByUserName" resultMap="byUserName">
      SELECT u.password,u.username
      FROM user u
      where u.username = #{userName} And u.status=1
  </select>

    <!-- -->
    <insert id="add" >
        INSERT INTO user  (username,password) VALUE (#{userName},#{password})
    </insert>


</mapper>